<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="payment_settings">
		<fieldset name="moneybooker" description="" label="COM_JMS_CONFIG_PAYMENT_SETTINGS" addpath="/administrator/components/com_jms/models/fields">
			
			<field type="spacer" label="&lt;strong&gt;Moneybooker&lt;/strong&gt;" />
			
			<field name="mb_merchant_email" type="text" default="" label="COM_JMS_CFG_MB_MERCHANT_EMAIL" description="COM_JMS_CFG_MB_MERCHANT_EMAIL" size="50" />
			<field name="mb_merchant_id" type="text" default="" label="COM_JMS_CFG_MB_MERCHANT_ID" description="COM_JMS_CFG_MB_MERCHANT_ID" size="50" />
			<field name="mb_secret_word" type="text" default="" label="COM_JMS_CFG_MB_SECRET_WORD" description="COM_JMS_CFG_MB_SECRET_WORD" size="50" />
						
			<field name="mb_currency" type="list" label="COM_JMS_CFG_MB_CURRENCY" description="COM_JMS_CFG_MB_CURRENCY" class="inputbox" size="1" default="0">
					<option value="CAD">Canadian Dollars</option>
					<option value="EUR">Euros</option>
					<option value="GBP">Pounds Sterling</option>
					<option value="USD">U.S. Dollars</option>
					<option value="JPY">Japanese Yen</option>
					<option value="AUD">Australian Dollars</option>
					<option value="NZD">New Zealand Dollars</option>
					<option value="CHF">Swiss Francs</option>
					<option value="HKD">Hong Kong Dollars</option>
					<option value="SGD">Singapore Dollars</option>
					<option value="SEK">Swedish Kronor</option>
					<option value="PLN">Polish Zloty</option>
					<option value="DKK">Danish Kroner</option>
					<option value="NOK">Norwegian Kroner</option>
					<option value="HUF">Hungarian Forint</option>
					<option value="CZK">Czech Koruna</option>
			</field>		
			
			<field name="iwl_moneybooker_type" type="hidden" default="0" value="0" />
			<field name="iwl_moneybooker_custom" type="hidden" default="id" value="id" />
			
			<field type="spacer" hr="true" />
			
		</fieldset>
	</fields>
</form>