	<name>Content - JMS Membership Sites - Load Description</name>
	<author>Infoweblink</author>
	<creationDate>August 2012</creationDate>
	<copyright>Copyright (C) 2011 Infoweblink. All RIghts Reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>support@infoweblink.com</authorEmail>
	<authorUrl>http://www.joomlamadesimple.com/</authorUrl>
	<version>2.5-2.1.0</version>
	<description>JMS Membership Sites content plugin to load Voucher description into an article</description>
	
	<files>
		<filename plugin="jmsloaddescription">jmsloaddescription.php</filename>
		<filename>index.html</filename>
	</files>
	
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="subscribe_btn_img" type="text"
					default="components/com_jms/assets/images/subscribe.gif"
					description="Button image URL"
					label="Button image URL"
					size="80"
				/>
			</fieldset>
		</fields>
	</config>
	
</extension>
